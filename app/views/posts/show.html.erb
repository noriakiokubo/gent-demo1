<p class="h4">
  Post by <%= @post.user.name %> at <%= @post.created_at.strftime("%Y/%m/%d %H:%M") %>
</p>

<br />

<p class="h4">
  <%= @post.title %>
</p>

<br />

<p>
  <%= simple_format(@post.content, class: "h4") %>
</p>

<br />

<div class="btn-group">
  <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-info" %>
  <%= link_to 'Back', posts_path, class: "btn btn-default" %>
</div>
